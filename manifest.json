{
  "manifest_version": 3,
  "name": "Hexo",
  "description": "Color picker & converter: HEX, RGB, HSL. History, presets, copy on click.",
  "version": "1.0.0",
  "action": {
    "default_title": "Hexo",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "permissions": ["storage", "clipboardWrite"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": false
  }
}
